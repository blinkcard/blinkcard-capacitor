{
  "name": "@microblink/blinkcard-capacitor",
  "version": "2.10.0",
  "description": "AI-driven credit card scanning for cross-platform apps built with Capacitor.",
  "main": "dist/plugin.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "lint": "npm run prettier -- --check && npm run swiftlint -- lint",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\" --plugin=prettier-plugin-java",
    "swiftlint": "node-swiftlint",
    "build": "npm run clean && tsc && rollup -c rollup.config.mjs",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "author": "Microblink",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/android": "^7.0.0",
    "@capacitor/cli": "^7.0.0",
    "@capacitor/core": "^7.0.0",
    "@capacitor/ios": "^7.0.0",
    "@ionic/prettier-config": "^4.0.0",
    "@ionic/swiftlint-config": "^2.0.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@types/node": "^17.0.41",
    "prettier": "^3.4.2",
    "prettier-plugin-java": "^2.6.6",
    "rimraf": "^6.0.1",
    "rollup": "^4.30.1",
    "swiftlint": "^2.0.0",
    "typescript": "~3.8.3"
  },
  "peerDependencies": {
    "@capacitor/core": ">=7.0.0"
  },
  "files": [
    "dist/",
    "ios/",
    "android/",
    "MicroblinkBlinkcardCapacitor.podspec"
  ],
  "keywords": [
    "credit-card",
    "scanning",
    "card",
    "scanner",
    "sdk",
    "capacitor",
    "ionic",
    "plugin",
    "machine-learning",
    "cross-platform",
    "android",
    "ios",
    "add-card",
    "new-payment-method"
  ],
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/blinkcard/blinkcard-capacitor"
  },
  "bugs": {
    "url": "https://github.com/blinkcard/blinkcard-capacitor/issues"
  }
}
